<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="partner_code" attrs="{'invisible': [('type', '!=', 'delivery_carrier')], 'required': [('type', '=', 'delivery_carrier')]}"/>
                </field>
                <xpath expr="//sheet//notebook//page[@name='internal_notes']" position="after">
                    <page name='Authorization' string="Authorization" attrs="{'invisible': [('type', '!=', 'delivery_carrier')]}">
                        <button name="get_access_token" type="object" class="oe_highlight" string="Get Access Token"/>
                        <group name="authorization">
                            <field name="authorization" placeholder="Token of ..."/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>