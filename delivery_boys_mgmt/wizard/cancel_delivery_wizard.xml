<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cancel_delivery_wizard_form_view" model="ir.ui.view">
        <field name="name">cancel.delivery.wizard.view</field>
        <field name="model">cancel.delivery.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1><field name="delivery_order_id" force_save="1"/></h1>
                </div>
                <group>
                    <field name="reason_cancel"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Confirm cancel" type="object" name="action_confirm_cancel_delivery_boys" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cancel_delivery_wizard_action" model="ir.actions.act_window">
        <field name="name">Cancel delivery</field>
        <field name="res_model">cancel.delivery.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>